{
  "compilerOptions": {
    "baseUrl": "src",

    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",

    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    
    "resolveJsonModule": true,
    "sourceMap": true,
  
    "outDir": "build",

    "paths": {
      "@/*": [ "*" ]
    }
  }
}